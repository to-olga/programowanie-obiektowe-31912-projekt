@page "/Pet/{id:int}"
@rendermode InteractiveServer
@using Microsoft.EntityFrameworkCore
@using PetHealthHistory.Data

<PageTitle>Pet Details</PageTitle>

@if (_pet == null)
{
    <p>Loading...</p>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>
            <span class="icon-@_pet.PetType.ToString().ToLower()"></span>
            @_pet.Name (@_pet.PetType.GetLabel())
        </h3>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-primary btn-sm" @onclick='() => NavigationManager.NavigateTo($"/Pet/{_pet.Id}/Edit")'>Edit</button>
            <button class="btn btn-outline-danger btn-sm" @onclick='() => NavigationManager.NavigateTo($"/Pet/{_pet.Id}/Delete")'>Delete</button>
            <button class="btn btn-outline-secondary btn-sm" @onclick='() => NavigationManager.NavigateTo("/")'>Back to list</button>
        </div>
    </div>
    
    <div class="mb-4">
        <p><strong>Birth Date:</strong> @_pet.BirthDate.ToShortDateString()</p>
        @* nie wy≈õwietlaj pustych p√≥l *@
        @if (!string.IsNullOrWhiteSpace(_pet.Kind))
        {
            <p><strong>Species/Breed:</strong> @_pet.Kind</p>
        }
        @if (!string.IsNullOrWhiteSpace(_funFact))
        {
            <p class="text-muted"><em>Fun fact: @_funFact</em></p>
        }
    </div>
    
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4>Health History</h4>
        <button class="btn btn-outline-primary btn-sm" @onclick='() => NavigationManager.NavigateTo($"/Pet/{Id}/AddEvent")'>Ôºã Add Event</button>
    </div>

    @if (!_pet.Events.Any())
    {
        <p>No events recorded.</p>
    }
    else
    {
        <div class="mb-3">
            <input type="text" class="form-control" placeholder="Search history..." @bind="_searchQuery" @bind:event="oninput" />
        </div>
        
        <div class="accordion" id="petHistoryAccordion">
            @* wyfiltruj zdarzenia na podstawie ciƒÖgu znak√≥w podanego w polu wyszukiwania i posortuj po dacie *@
            @foreach (var ev in _pet.Events.Where(e => e.Search(_searchQuery)).OrderByDescending(e => e.Date))
            {
                var eventId = $"event-{ev.Id}";
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#@eventId" aria-expanded="false" aria-controls="@eventId">
                            <div class="d-flex justify-content-between align-items-center w-100 me-3">
                                <span>
                                    @* inny nag≈Ç√≥wek dla ka≈ºdego rodzaju wizyty *@
                                    @if (ev is Procedure proc)
                                    {
                                        @($"Procedure - {proc.Name}")
                                    }
                                    else if (ev is Visit visit)
                                    {
                                        @($"Visit - {visit.Doctor} ({visit.Clinic})")
                                    }
                                    else if (ev is LabTest)
                                    {
                                        @("Lab test")
                                    }
                                </span>
                                <span class="text-nowrap ms-auto">
                                    @ev.Date.ToShortDateString()
                                    <span class="ms-2" @onclick='() => NavigationManager.NavigateTo($"/Event/{ev.Id}/Edit")' @onclick:stopPropagation="true">üõ†Ô∏è</span>
                                    <span class="ms-2" @onclick='() => NavigationManager.NavigateTo($"/Event/{ev.Id}/Delete")' @onclick:stopPropagation="true">üóëÔ∏è</span>
                                </span>
                            </div>
                        </button>
                    </h2>
                    <div id="@eventId" class="accordion-collapse collapse" data-bs-parent="#petHistoryAccordion">
                        <div class="accordion-body">
                            @if (ev is Visit v)
                            {
                                // wy≈õwietlaj tylko wype≈Çnione pola ka≈ºdego rodzaju wizyty
                                @if (!string.IsNullOrWhiteSpace(v.Doctor))
                                {
                                    <p><strong>Doctor:</strong> @v.Doctor</p>
                                }
                                @if (!string.IsNullOrWhiteSpace(v.Clinic))
                                {
                                    <p><strong>Clinic:</strong> @v.Clinic</p>
                                }
                                @if (ev is Procedure p && !string.IsNullOrWhiteSpace(p.Name))
                                {
                                    <p><strong>Procedure Name:</strong> @p.Name</p>
                                }

                                @if (!string.IsNullOrWhiteSpace(v.Description))
                                {
                                    <p>
                                        <strong>Description:</strong><br />
                                        @v.Description
                                    </p>
                                }
                            }
                            else if (ev is LabTest lt)
                            {
                                @if (!string.IsNullOrWhiteSpace(lt.LabName))
                                {
                                    <p><strong>Laboratory:</strong> @lt.LabName</p>
                                }
                                @if (!string.IsNullOrWhiteSpace(lt.OrderedBy))
                                {
                                    <p><strong>Ordered By:</strong> @lt.OrderedBy</p>
                                }
                                
                                @if (lt.Results.Any())
                                {
                                    <h6>Results:</h6>
                                    <table class="table table-hover">
                                        <thead>
                                            <tr class="text-center">
                                                <th scope="col">Test</th>
                                                <th scope="col">Value</th>
                                                <th scope="col">Range</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var res in lt.Results)
                                            {
                                                // pod≈õwietl wiersz z wynikami poza normƒÖ
                                                <tr class="@(res.InNormalRange ? "" : "table-warning")">
                                                    <td>@res.TestName</td>
                                                    <td class="text-center">@res.Value</td>
                                                    <td class="text-center">@res.NormalRange</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                }
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
}

@code 
{
    [Parameter] public int Id { get; set; }

    [Inject] public IDbContextFactory<PetHealthHistoryContext> DbFactory { get; private set; }
    [Inject] public NavigationManager NavigationManager { get; private set; }

    private Pet? _pet;
    // pole do przechowywania frazy wyszukiwania
    private string _searchQuery = string.Empty;
    private string? _funFact = null;
    
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await using var context = DbFactory.CreateDbContext();
            _pet = await context.Pets.FindAsync(Id);
        
            if (_pet == null)
            {
                NavigationManager.NotFound();
                return;
            }
            
            // przypisz losowy fakt dotyczƒÖcy typu zwierzƒôcia (wywo≈Çanie metody koszystajƒÖcej z abstrakcyjnej tablicy
            // zdefiniowanej osobno dla ka≈ºdego typu zwierzƒôcia)
            _funFact ??= _pet.FunFact();
            
            StateHasChanged();
        }
    }
}
